<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>


        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>


        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>

        <!--<item name="android:navigationBarColor" tools:targetApi="21">@color/primary</item>-->

    </style>

    <!--Tema para la  los dos primeros ejercios-->
    <style name="AppTheme.Transparent" parent="AppTheme.Base">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
        <!--<item name="android:windowTranslucentNavigation" tools:targetApi="19">true</item>-->
    </style>

    <!--Tema para la  pantalla de Minha Conta-->
    <style name="AppTheme.Minha_conta" parent="AppTheme.Base">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_text_black</item>
        <item name="android:textColorSecondary">@color/secondary_text_black</item>
    </style>

</resources>
